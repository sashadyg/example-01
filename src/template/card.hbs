<li class='film-card__item' data-id='{{id}}'>
  <a href='' class='film-card__link link-no-tdn'>
    <div class='film-card__thumb'>
      <img
        <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{original_title}}" width="100%" data-id="{{id}}"
        alt='{{original_title}}'
        data-id='{{id}}'
      />
    </div>
    <div class='film-card__content'>
      <h2 class='film-card__title'>{{original_title}}</h2>
      <p class='film-card__text'><span>{{genres}}</span> | <span>{{release_date}}</span></p>
      <div class='film-card__rating--wrapper'>
        <span class='film-card__rating'>{{vote_average}}</span>
      </div>
    </div>
  </a>
</li>